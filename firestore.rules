
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == 'naveen.01@nafon.in';
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.email == 'nafonstudios@gmail.com' || request.auth.token.email == 'john.04@nafon.in' || request.auth.token.email == 'karthick.02@nafon.in' || request.auth.token.email == 'thamizh.03@nafon.in'|| request.auth.token.email == 'jed.05@nafon.in' || request.auth.token.email == 'gershon.05@nafon.in' || request.auth.token.email == 'lekshmi.06@nafon.in' || isSuperAdmin());
    }

    function canManageProjects() {
        return isSuperAdmin() || (isSignedIn() && (request.auth.token.email == 'karthick.02@nafon.in' || request.auth.token.email == 'jed.05@nafon.in' || request.auth.token.email == 'gershon.05@nafon.in' || request.auth.token.email == 'lekshmi.06@nafon.in'));
    }

    function canManageEmployees() {
        return isSuperAdmin() || (isSignedIn() && request.auth.token.email == 'john.04@nafon.in');
    }

    function canManageSalaries() {
      return canManageEmployees() || (isSignedIn() && request.auth.token.email == 'lekshmi.06@nafon.in');
    }
    
    function canManageOrders() {
      return isSuperAdmin() || (isSignedIn() && (request.auth.token.email == 'john.04@nafon.in' || request.auth.token.email == 'jed.05@nafon.in' || request.auth.token.email == 'karthick.02@nafon.in' || request.auth.token.email == 'gershon.05@nafon.in' || request.auth.token.email == 'lekshmi.06@nafon.in'));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    match /projects/{projectId} {
      allow get, list: if true;
      allow write: if canManageProjects();
    }

    match /users/{userId} {
      allow read, write: if false;
    }
    
    match /orders/{orderId} {
      allow list, read: if canManageOrders();
      allow create: if isSignedIn();
      allow update: if canManageOrders();
      allow delete: if canManageOrders();
    }
    
    match /consultations/{consultationId} {
      allow create: if true;
      allow read, list, write: if isAdmin();
    }

    match /users/{userId}/customOrders/{customOrderId} {
      allow get, list, create, update, delete: if isOwner(userId);
    }

    match /employees/{employeeId} {
        allow read: if true;
        allow create, delete: if canManageEmployees();
        allow update: if canManageSalaries();
    }
  }
}

    